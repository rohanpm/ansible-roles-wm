general {
        colors = true
        interval = 5
}

order += "load"
order += "tztime local"

{% for item in timezones %}
order += "tztime {{ item.label }}"
{% endfor %}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

{% for item in timezones %}
tztime {{ item.label }} {
        format = "%a %H:%M {{ item.label }}"
        timezone = "{{ item.timezone }}"
}
{% endfor %}

load {
        format = "%1min"
}
